<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_komedija"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aminapc.filmquiz.Komedija">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/dumbanddumber"
                    android:id="@+id/dumbanddumber"/>

                <TextView
                    android:text="Dumb and dumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/dumb_naslov"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textSize="18dp"
                    android:textColor="#a9508a"/>

                <TextView
                    android:text="Glup i gluplji (eng. Dumb and Dumber) je američka komedija iz 1994. godine u režiji braće Petera i Bobbyja Farrellyja, koji su uz Bennetta Yellina i autori scenarija.  U filmu glavne uloge tumače Jim Carrey i Jeff Daniels, a priča govori o dvojici glupavih prijatelja iz grada Providence u Rhode Islandu, Lloydu i Harryju."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:id="@+id/dumb_opis"
                    android:textAlignment="center"
                    android:textColor="#a9508a"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/hangover"
                    android:id="@+id/hangover"/>

                <TextView
                    android:text="The Hangover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/hangover_naslov"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#a9508a"/>

                <TextView
                    android:text="Dva dana prije svog vjenčanja, Doug (Justin Bartha) odlazi u Las Vegas sa svoja dva najbolja prijatelja Philom i Stuom (Bradley Cooper i Ed Helms) te budućim šo­gorom Alanom (Zach Galifianakis) na ludu momačku večer za koju su se sva četvo­rica zaklela da je nikad neće zaboraviti. Međutim, kada se trojica momaka sljedećeg jutra probude s nezapamćenim mamurlukom, nitko od njih ne može se ničega sjetiti. Njihov hotelski apartman u potpunosti je uništen, a mladoženje Douga nema doslovno nigdje!  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/hangover_opis"
                    android:textAlignment="center"
                    android:textColor="#a9508a"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/stepbrothers"
                    android:id="@+id/stepbrothers"/>

                <TextView
                    android:text="Step Brothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/stepbrothers_naslov"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#a9508a"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/stepbrothers_opis"
                    android:textAlignment="center"
                    android:textColor="#a9508a"
                    android:text="Brennan Huff (Will Ferrell) i Dale Doback (John C. Reilly) dva su lijena 40-godišnjaka koje sudbina iznenada spoji kada se njihovi samohrani roditelji odluče vjenčati. Njihova početna antipatija i bijesni ispadi koji slijede prisile njihove roditelje da ima daju konačni ultimatum, vrijeme je da nađu posao i konačno se osamostale."/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
