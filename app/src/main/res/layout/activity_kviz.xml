<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_kviz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="0dp"
    android:background="#e5e4ed"
    tools:context="com.example.aminapc.filmquiz.Kviz">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_weight="0.36"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/frozen"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pitanje"
            android:textSize="18dp"
            android:layout_marginBottom="16dp"
            android:textColor="#a9508a"
            android:textAlignment="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/odgovor1"
                android:width="100dp"
                android:height="70dp"
                android:textSize="12dp"
                android:textColor="#e5e4ed"
                android:layout_margin="2dp"
                android:background="#a9508a"
                android:layout_weight="1"/>

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/odgovor2"
                android:width="100dp"
                android:layout_margin="2dp"
                android:height="70dp"
                android:textColor="#e5e4ed"
                android:background="#a9508a"
                android:textSize="12dp"

                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/odgovor3"
                android:width="100dp"
                android:height="70dp"
                android:textSize="12dp"
                android:textColor="#e5e4ed"
                android:background="#a9508a"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/odgovor4"
                android:width="100dp"
                android:height="70dp"
                android:textSize="12dp"
                android:layout_margin="2dp"
                android:textColor="#e5e4ed"
                android:background="#a9508a"

                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
