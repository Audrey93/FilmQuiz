<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_film"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pozadina"
    tools:context="com.example.aminapc.filmquiz.FilmActivity"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    >



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e5e4ed"
        android:textSize="40dp"
        android:text="Dobro doÅ¡li"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"/>

    <Button
        android:id="@+id/kviz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zaigraj kviz!"
        android:textColor="#e5e4ed"
        android:textSize="20dp"
        android:background="#a9508a"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/detaljnije"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="150dp"
        android:background="#a9508a"
        android:text="Procitaj o filmovima!"
        android:textColor="#e5e4ed"
        android:textSize="20dp"/>

</RelativeLayout>
