<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aminapc.filmquiz.Drama">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/godfather"
                    android:id="@+id/godfather"/>

                <TextView
                    android:text="The Godfather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/godfather_naslov"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textSize="18dp"
                    android:textColor="#a9508a"/>

                <TextView
                    android:text="Kum (originalno eng. The Godfather) je mafijaški film iz 1972. urađen prema istoimenoj noveli Maria Puza koji je režirao Francis Ford Coppola, a scenario napisali Puzo, Coppola i Robert Towne (nepotpisan)[2] U glavnim ulogama su Marlon Brando, Al Pacino, James Caan, Richard S. Castellano, Robert Duvall, Sterling Hayden, John Marley, Richard Conte i Diane Keaton. Radnja je smještena u periodu od 1945. do 1955. godine i hronološki prati život fiktivne italijansko-američke porodice Corleone."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:id="@+id/godfather_opis"
                    android:textColor="#a9508a"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/heat"
                    android:id="@+id/heat"/>

                <TextView
                    android:text="Heat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/heat_naslov"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#a9508a"/>

                <TextView
                    android:text='Vrućina (eng. Heat) je kriminalistička drama Michaela Manna iz 1995. godine s Robertom De Nirom i Al Pacinom u glavnim ulogama.  De Niro glumi mirnog, metodičnog i introvertiranog pljačkaša "Neila McCauleyja", a Pacino "Vincenta Hannu", policijskog detektiva veterana iz Los Angelesa, čija posvećenost poslu razara njegov brak. Ovo je prvi film u kojem se Pacino i De Niro pojavljuju zajedno iako su oba glumca nastupila u Kumu II gdje se nisu pojavili u zajedničkoj sceni.  Film je zapravo obrada Mannovog televizijskog filma L.A. Takedown iz 1989. godine, u trajanju od 92 minute.'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/heat_opis"
                    android:textAlignment="center"
                    android:textColor="#a9508a"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/darkknight"
                    android:id="@+id/darkknight"/>

                <TextView
                    android:text="The Dark Knight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:id="@+id/darkknight_naslov"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="#a9508a"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textColor="#a9508a"
                    android:id="@+id/darkknight_opis"
                    android:textAlignment="center"
                    android:text="Vitez tame (eng. The Dark Knight) film je Christophera Nolana iz 2008. o liku Batmana iz stripova DC Comicsa, odnosno drugi dio Nolanova filmskog serijala o Batmanu i nastavak filma Batman: Početak. Christian Bale reprizira glavnu ulogu. Radnja filma fokusira se na Batmanovu borbu s novim zlikovcem, Jokerom (Heath Ledger) i njegov odnos s okružnim tužiteljem Harveyjem Dentom (Aaron Eckhart) i njegovom starom prijateljicom i simpatijom, pomoćnicom okružnog tužitelja Rachel Dawes (Maggie Gyllenhaal)."/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
